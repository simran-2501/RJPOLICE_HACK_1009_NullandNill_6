<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Rectangle Shape -->
        <item android:id="@+id/rectangleShape">
            <shape android:shape="rectangle">
                <solid android:color="#6C63FF" />
            </shape>
        </item>

        <!-- Box Shadow -->
        <item android:right="1px" android:left="1px" android:bottom="12px" android:top="0px">
            <shape android:shape="rectangle">
                <solid android:color="#00000040" />
            </shape>
        </item>
    </layer-list>