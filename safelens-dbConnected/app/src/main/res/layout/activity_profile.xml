<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    >

    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/rectangle_with_shadow"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>

    <View
        android:id="@+id/profileCircleView1"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginStart="-401dp"
        android:layout_marginTop="-201dp"
        android:background="@drawable/white_circle_background"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <View
        android:id="@+id/profileCircleView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-401dp"
        android:layout_marginTop="-201dp"
        android:background="@drawable/white_circle_background"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />
    <View
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shadow_gradient"
        app:layout_constraintTop_toBottomOf="@id/headerView"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/curved_background"
        android:layout_marginHorizontal="45dp"
        android:text="Name"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shadowView"
        />
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/curved_background"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"
        />
    <TextView
        android:id="@+id/userAadhar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/curved_background"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:text="Aadhar"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userEmail"
        />
    <TextView
        android:id="@+id/userPhone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/curved_background"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAadhar"
        />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:hint="@string/sign_out"
        android:textSize="20sp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/userPhone" />


    <FrameLayout
        android:id="@+id/navigationFocusFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Semi-circle focus effect -->
        <View
            android:id="@+id/navigationFocus"
            android:layout_width="138dp"
            android:layout_height="100dp"
            android:layout_marginBottom="-2dp"
            android:layout_gravity="end"
            android:background="@drawable/navigation_circle"
            android:elevation="20dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B5B3B3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/icon1"
            android:layout_width="30dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/img_5" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="35dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/img_6" />

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="35dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/img_7" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="200dp"
        android:text="@string/profile"
        android:layout_marginTop="46dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/headerView"
        app:layout_constraintStart_toStartOf="@+id/headerView"
        app:layout_constraintTop_toTopOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>